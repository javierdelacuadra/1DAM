               preserveRatio="true"/>
    <MFXButton fx:id="botonBanners" layoutX="108.0" layoutY="272.0" mnemonicParsing="false"
               onAction="#cargarPantallaBanners" prefHeight="56.0" prefWidth="167.0"
               style="-fx-background-color: #e4f7f1;" text="Banners"/>
    <MFXButton fx:id="botonFarmeo" layoutX="524.0" layoutY="272.0" mnemonicParsing="false"
               onAction="#cargarPantallaFarmeo" prefHeight="56.0" prefWidth="167.0"
               style="-fx-background-color: #e4f7f1;" text="Farmeo"/>
    <MFXButton fx:id="botonTienda" layoutX="316.0" layoutY="272.0" mnemonicParsing="false"
               onAction="#cargarPantallaTienda" prefHeight="56.0" prefWidth="167.0"
               style="-fx-background-color: #e4f7f1;" text="Tienda"/>
    <MFXButton fx:id="botonSalir" layoutX="343.0" layoutY="550.0" mnemonicParsing="false" onAction="#salir"
