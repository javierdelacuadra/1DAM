    <MFXButton layoutX="14.0" layoutY="550.0" mnemonicParsing="false" onAction="#cargarPantallaInventario"
               prefHeight="26.0" prefWidth="101.0" style="-fx-background-color: #e4f7f1;" text="Inventario"/>
    <MFXButton layoutX="672.0" layoutY="550.0" mnemonicParsing="false" onAction="#reiniciarCuenta" prefHeight="26.0"
               prefWidth="114.0" style="-fx-background-color: #e4f7f1;" text="Reiniciar Cuenta"/>
</AnchorPane>
